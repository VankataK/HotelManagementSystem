﻿@using HotelManagementSystem.Web.ViewModels.Admin.RoomManagment
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@model IEnumerable<AllRoomsViewModel>

<div class="container mt-5">
    <h1 class="text-center mb-4">Room Management</h1>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Add New Room
        </a>
    </div>

    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">RoomNumber</th>
                <th scope="col">CategoryName</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.CategoryName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-warning btn-sm me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

